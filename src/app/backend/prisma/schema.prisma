generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}


model Project {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  link        String
  categories  Category[]
  tags        Tag[]
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique       // <-- add this
  project   Project?  @relation(fields: [projectId], references: [id])
  projectId Int?
}

model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique       // <-- add this
  project   Project?  @relation(fields: [projectId], references: [id])
  projectId Int?
}
